<?xml version="1.0" encoding="UTF-8"?>

<assembly>
  <id>geofence-plugin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>release/target/dependency</directory>
      <outputDirectory/>
      <includes>
        <include>*geofence*</include>
      </includes>
      <excludes>
        <exclude>*geofence-server*.jar</exclude>
        <exclude>*geofence-persistence*.jar</exclude>
        <exclude>*geofence-services-impl*.jar</exclude>
        <exclude>*geofence-model-internal*</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>release</directory>
      <outputDirectory/>
      <includes>
        <include>GPL.md</include>
        <include>NOTICE.md</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>

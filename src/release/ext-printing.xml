<?xml version="1.0" encoding="UTF-8"?>

<assembly>
  <id>printing-plugin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>release/target/dependency</directory>
      <outputDirectory/>
      <includes>
        <include>itextpdf*</include>
        <include>metrics-*</include>
        <include>jyaml*</include>
        <include>mapfish-geo-lib*</include>
        <include>gs-printing-*.jar</include>
        <include>print-lib-*.jar</include>
        <include>xercesImpl-*.jar</include>
        <include>xml-apis-xerces-*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>release/extensions/printing</directory>
      <outputDirectory/>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>release</directory>
      <outputDirectory/>
      <includes>
        <include>GPL.md</include>
        <include>NOTICE.md</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
